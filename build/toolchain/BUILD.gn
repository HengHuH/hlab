import("//build/toolchain/concurrent_links.gni")

declare_args() {
    action_pool_depth = -1
}

if (current_toolchain == default_toolchain) {
    if (action_pool_depth == -1) {
        action_pool_depth = 0
    }

    pool("link_pool") {
        depth = concurrent_links
    }

    pool("action_pool") {
        depth = action_pool_depth
    }
}